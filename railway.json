{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npm run build:frontend && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 3
  }
} 